extends /layouts/announcement/briefing.pug

append data
  -
    const i18n = Object.freeze( {
      [ language.getLanguageId( 'en-US' ) ]: {
        'title':     'College',
        'topic':     'College',
        'pinned':    'Pinned Announcement',
        'normal':    'Announcement',
        'breadcrumb': {
          'home':    'Home',
          'student': 'Student',
        },
      },
      [ language.getLanguageId( 'zh-TW' ) ]: {
        'title':     '大學部',
        'topic':     '大學部',
        'pinned':    '置頂貼文',
        'normal':    '一般公告',
        'breadcrumb': {
          'home':    '首頁',
          'student': '學生事務',
        },
      },
    } );
    const filterModifier = 'college';
    const filterTags = [
      'award',
      'college',
      'competition',
      'conference',
      'exhibition',
      'international',
      'internship',
      'rule',
      'scholarship',
      'speech',
    ];
    const currentRoute = 'student/college';

append title
  +title( i18n[ language.id ].title )

append stylesheets
  +css( 'student/college' )

append header
  +banner( i18n[ language.id ].title )
  +breadcrumb( [
    { text: i18n[ language.id ].breadcrumb.home, url: '' },
    { text: i18n[ language.id ].breadcrumb.student, url: 'student' },
    { text: i18n[ language.id ].title },
  ] )

append footer

append scripts
  +js( 'student/college' )
