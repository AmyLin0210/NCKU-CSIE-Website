extends /layouts/announcement/briefing.pug

append data
  -
    const i18n = Object.freeze( {
      'en-US': {
        'title':  'Ph.D',
        'topic':  'Ph.D',
        'top':    'Top Announcement',
        'normal': 'Announcement',
      },
      'zh-TW': {
        'title':  '博士',
        'topic':  '博士',
        'top':    '置頂貼文',
        'normal': '一般公告',
      },
    } );

append title
  +title( i18n[ language ].title )

append stylesheets
  +css( 'student/phd' )

append header

append topic
  +topic( i18n[ language ].topic )

append filter
  +filter( {
    modifier: 'phd',
    tags: [
      'award',
      'competition',
      'conference',
      'exhibition',
      'international',
      'internship',
      'phd',
      'rule',
      'scholarship',
      'speech',
    ]
  } )

append footer

append scripts
  +js( 'student/phd' )
