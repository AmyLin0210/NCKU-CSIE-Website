mixin entries( belongBlock, entryArr )
  section.entries( class = `${ belongBlock }__entries` )
    each entry in entryArr
      a.entries__entry.entry(
        class = `entries__entry--${ entry.modifier }`,
        href = entry.route,
        target= '_blank',
      )
        p.entry__title= entry.title
        p.entry__detail= entry.detail
