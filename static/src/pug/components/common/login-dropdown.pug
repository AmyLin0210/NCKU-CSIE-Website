include /components/common/image.pug
+image( {
    alt:       `${ name }`,
    className: `${ belongBlock }__image ${ belongBlock }__image--personal`,
    src:       `${ photo }`,
} )
span.login__text= name
button.login__switch
ul.login__dropdown.dropdown
  li.dropdown__item.item
    a.item__link.link( href = i18n[ LANG.id ].profile.route )= i18n[ LANG.id ].profile.text
  li.dropdown__item.item
    a.item__link.link( href = i18n[ LANG.id ].password.route )= i18n[ LANG.id ].password.text
  li.dropdown__item.item#logout
    a.item__link.link( href = i18n[ LANG.id ].logout.route )= i18n[ LANG.id ].logout.text