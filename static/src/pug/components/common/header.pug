  header#header.header( class = `${ belongBlock }__header` )
    //- Logo
    a.header__logo.logo( href = UTILS.url( { href : '' } ) )
      +image( {
        alt:       'csie',
        className: 'logo__image',
        src:       'logo/csie.png',
      } )
    //- Caption
    section.header__caption.caption
      article.caption__title.title
        span.title__text 成功大學
        span.title__text 資訊工程學系
        span.title__text 暨
        span.title__text 研究所
      article.caption__subtitle.subtitle
        span.subtitle__text Department
        span.subtitle__text of
        span.subtitle__text Computer Science
        span.subtitle__text and
        span.subtitle__text Information Engineering

    //- Menu Icon
    button.header__menu.menu
      span.menu__line
      span.menu__line
      span.menu__line

    //- Navigation Bar
    nav.header__navigation.navigation

      //- Search Column, currently not available
      //- Small screen version
      form.navigation__search.search( action = UTILS.url( { href : 'search' } ), method = 'GET' )
        input.search__input( type = 'text', placeholder = i18n[ LANG.id ].util.search, name = 'searchText', value = '' )
        button.search__submit.submit( type = 'submit' )
          +image( {
            alt:       i18n[ LANG.id ].util.search,
            className: 'submit__image',
            src:       'icon/search.png',
          } )

      //- Cancel Icon
      button.navigation__cancel

      //- All routes
      ul.navigation__list.list
        li.list__item.item
          a.item__link.item__link--no-dropdown( href = UTILS.url( { href : '' } ) )= i18n[ LANG.id ].route.home.index
        li.list__item.item
          a.item__link( href = UTILS.url( { href : 'about' } ) )= i18n[ LANG.id ].route.about.index
          button.item__switch
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'about/intro' } ) )= i18n[ LANG.id ].route.about.intro
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'about/faculty' } ) )= i18n[ LANG.id ].route.about.faculty
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'about/staff' } ) )= i18n[ LANG.id ].route.about.staff
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'about/award' }) )= i18n[ LANG.id ].route.about.award
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'about/contact' } ) )= i18n[ LANG.id ].route.about.contact
        li.list__item.item
          a.item__link( href = UTILS.url( { href : 'research' } ) )= i18n[ LANG.id ].route.research.index
          button.item__switch
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'research/labs' } ) )= i18n[ LANG.id ].route.research.labs
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'research/publications' } ) )= i18n[ LANG.id ].route.research.publications
        li.list__item.item
          a.item__link( href = UTILS.url( { href : 'student' } ) )= i18n[ LANG.id ].route.student.index
          button.item__switch
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'student/college' } ) )= i18n[ LANG.id ].route.student.college
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'student/master' } ) )= i18n[ LANG.id ].route.student.master
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'student/phd' } ) )= i18n[ LANG.id ].route.student.phd
        li.list__item.item
          a.item__link( href = UTILS.url( { href : 'announcement' } ) )= i18n[ LANG.id ].route.announcement.index
          button.item__switch
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'announcement/all' } ) )= i18n[ LANG.id ].route.announcement.all
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'announcement/activity' } ) )= i18n[ LANG.id ].route.announcement.activity
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'announcement/recruitment' } ) )= i18n[ LANG.id ].route.announcement.recruitment
        li.list__item.item
          a.item__link( href = UTILS.url( { href : 'resource' } ) )= i18n[ LANG.id ].route.resource.index
          button.item__switch
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/rule' } ) )= i18n[ LANG.id ].route.resource.rule
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/rent' } ) )= i18n[ LANG.id ].route.resource.rent
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/fix' } ) )= i18n[ LANG.id ].route.resource.fix
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/ieet' } ) )= i18n[ LANG.id ].route.resource.ieet
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/sitemap' } ) )= i18n[ LANG.id ].route.resource.sitemap
            li.dropdown__item.item
              a.item__link( href = UTILS.url( { href : 'resource/alumni' } ) )= i18n[ LANG.id ].route.resource.alumni

      //- Login,
      //- Small screen version
      a.navigation__login.login( href = UTILS.url( { href : 'auth/login' } ) )
        +image( {
          alt:       i18n[ LANG.id ].util.login,
          className: 'login__image',
          src:       'icon/user.png',
        } )
        span.login__text= i18n[ LANG.id ].util.login

      //- Calendar, currently not available
      //- Small screen version
