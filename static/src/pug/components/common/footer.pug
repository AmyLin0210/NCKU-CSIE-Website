mixin footer
  -
    const i18n = Object.freeze( {
      'en-US': {
        'contact': {
          'title':    'Contact Us',
          'address':  'No.1, Daxue Rd., East Dist., Tainan City 701, Taiwan (R.O.C.)',
          'position': 'Department Location'
        },
        'follow':     'Follow us'
      },
      'zh-TW': {
        'contact': {
          'title':    '聯絡我們',
          'address':  '70101 台南市東區大學路一號',
          'position': '系館位置圖'
        },
        'follow':     '關注我們'
      }
    } );
  footer.footer
    figure.footer__logo.logo
      +image( {
        alt:          'csie',
        className:    'logo__image',
        src:          'logo/csie-white.png',
      } )
      figcaption.logo__caption.caption
        h1.caption__text.caption__text--large 成功大學資訊工程學系暨研究所
        h2.caption__text.caption__text--small Department of Computer Science and Information Engineering
    section.footer__contact.contact
      h1.contact__title= i18n[ language ].contact.title
      aside.contact__address.address
        address.address__text= `${i18n[ language ].contact.address}｜`
        //改掉class background-image
        a.address__text.address__text--map( href = "/about" )= i18n[ language ].contact.position
      aside.contact__mail.mail
        a.mail__text( href = "mailto:em62500@mail.csie.ncku.edu.tw" ) em62500@mail.csie.ncku.edu.tw 
        //a href mailto
      aside.contact__phone.phone
        //a href tel
        a.phone__caption( href = "tel:062757575" ) 06-2757575 ext 62500
    section.footer__copyright.copyright
      h1.copyright__title Copyright © 2018 國立成功大學資訊工程系
      //左右兩邊的線
      figure.copyright__icon.icon
        figcaption.icon__caption= i18n[ language ].follow
        a( href = "https://www.facebook.com/ncku.csie" ).icon__image.image
          +image( {
            alt: 'facebook',
            className: 'image__facebook',
            src: 'icon/facebook.png'
          } )