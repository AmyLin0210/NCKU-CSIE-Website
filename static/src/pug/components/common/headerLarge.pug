include /components/common/header-i18n.pug

mixin header--large( belongBlock )
  - const i18n = headerI18n();

  header.header.header--large( class = `${ belongBlock }__header` )
    //- Logo
    a.header__logo.logo( href = i18n[ LANG.id ].home.index.route )
      +image( {
        alt:       'csie',
        className: 'logo__image',
        src:       'logo/csie.png',
      } )
    //- Caption
    section.header__caption.caption
      article.caption__title.title
        span.title__text 成功大學
        span.title__text 資訊工程學系
        span.title__text 暨
        span.title__text 研究所
      article.caption__subtitle.subtitle
        span.subtitle__text Department
        span.subtitle__text of
        span.subtitle__text Computer Science
        span.subtitle__text and
        span.subtitle__text Information Engineering

    //- Navigation Bar
    nav.header__navigation.navigation
      //- All routes
      ul.navigation__list.list
        li.list__item.item
          a.item__link.item__link--no-dropdown( href = i18n[ LANG.id ].home.index.route )= i18n[ LANG.id ].home.index.text
        li.list__item.item
          a.item__link( href = i18n[ LANG.id ].about.index.route )= i18n[ LANG.id ].about.index.text
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].about.intro.route )= i18n[ LANG.id ].about.intro.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].about.faculty.route )= i18n[ LANG.id ].about.faculty.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].about.staff.route )= i18n[ LANG.id ].about.staff.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].about.award.route )= i18n[ LANG.id ].about.award.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].about.contact.route )= i18n[ LANG.id ].about.contact.text
        li.list__item.item
          a.item__link( href = i18n[ LANG.id ].research.index.route )= i18n[ LANG.id ].research.index.text
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].research.lab.route )= i18n[ LANG.id ].research.lab.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].research.publication.route )= i18n[ LANG.id ].research.publication.text
        li.list__item.item
          a.item__link( href = i18n[ LANG.id ].student.index.route )= i18n[ LANG.id ].student.index.text
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].student.college.route )= i18n[ LANG.id ].student.college.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].student.master.route )= i18n[ LANG.id ].student.master.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].student.phd.route )= i18n[ LANG.id ].student.phd.text
        li.list__item.item
          a.item__link( href = i18n[ LANG.id ].announcement.index.route )= i18n[ LANG.id ].announcement.index.text
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].announcement.all.route )= i18n[ LANG.id ].announcement.all.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].announcement.activity.route )= i18n[ LANG.id ].announcement.activity.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].announcement.recruitment.route )= i18n[ LANG.id ].announcement.recruitment.text
        li.list__item.item
          a.item__link( href = i18n[ LANG.id ].resource.index.route )= i18n[ LANG.id ].resource.index.text
          ul.item__dropdown.dropdown
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.rule.route )= i18n[ LANG.id ].resource.rule.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.rent.route )= i18n[ LANG.id ].resource.rent.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.fix.route )= i18n[ LANG.id ].resource.fix.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.ieet.route )= i18n[ LANG.id ].resource.ieet.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.sitemap.route )= i18n[ LANG.id ].resource.sitemap.text
            li.dropdown__item.item
              a.item__link( href = i18n[ LANG.id ].resource.alumni.route )= i18n[ LANG.id ].resource.alumni.text

    //- Calendar, currently not available
    section.header__functions.functions
      a.functions__calendar.calender( href = i18n[ LANG.id ].home.calendar.route )
        +image( {
          alt:       i18n[ LANG.id ].home.calendar.text,
          className: 'calendar__image',
          src:       'icon/calendar.png',
        } )

      //- Language Choice
      section.functions__language.language
        button.language__button.button
          +image( {
            alt:       i18n[ LANG.id ].language,
            className: 'button__image',
            src:       `icon/flag-${ LANG.id }.png`,
          } )
          ul.button__dropdown.dropdown
            a.dropdown__item.dropdown__item--zh-TW( href = UTILS.url( {
              href: currentRoute,
              query: { languageId: LANG.getLanguageId( 'zh-TW' ) }
            } ) ) 中文
            a.dropdown__item.dropdown__item--en-US( href = UTILS.url( {
              href: currentRoute,
              query: { languageId: LANG.getLanguageId( 'en-US' ) }
            } ) ) English

      aside.functions__bottom.bottom
        //- Login
        a.bottom__login( href = i18n[ LANG.id ].home.login.route )= i18n[ LANG.id ].home.login.text

        //- Search, currently not available
        scetion.bottom__search.search
          button.search__button.button
            +image( {
              alt: i18n[ LANG.id ].home.search.text,
              className: 'button__image',
              src:       'icon/search.png',
            } )
          section.search__dropdown.dropdown
            form.dropdown__form.form( action = i18n[ LANG.id ].home.search.route, method = 'GET' )
              input.form__hidden( type = 'hidden', value = LANG.id, name = 'language' )
              input.form__input( type = 'text', placeholder = i18n[ LANG.id ].home.search.text, name = 'searchText', value = '' )
              input.form__submit( type = 'submit', value = '' )
            button.dropdown__cancel ✕
