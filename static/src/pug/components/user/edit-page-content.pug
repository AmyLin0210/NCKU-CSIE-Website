-
article.info__input#input
  if type === 'text'
    section.input__text
      if flag !== null 
        img.input__flag( src= flag alt= '>' )
      if content !== null
        input.input__content( 
          placeholder= placeholder
          value= value
          name= name 
          dbTableItem= dbTableItem
          languageId= languageId
          i18n= i18n
        )

  else if type === 'time'
    article.input__time.time
      aside.time__from.from
        label.from__text= from
        span.from__input.input
          input.input__year( 
            type = 'number', 
            value = valueFrom,
            dbTableItem= 'from' 
            placeholder = 'yyyy' 
            name= nameFrom
          )
      aside.time__to.to
        label.to__text= to
        span.to__input.input
          input.input__year( 
            type = 'number', 
            value = valueTo, 
            placeholder = 'yyyy' 
            name= nameTo
            dbTableItem= 'to'
          )

  else if type === 'local-topic'
    section.input__local-topic.local-topic  
      p.local-topic__text= localTopic

  else if type === 'dropdown'
    section.input__dropdown.dropdown
      section.dropdown__top( 
        class=`dropdown__top--${ dbTableItem }` 
      )= top
      article.dropdown__button.button( class= `dropdown__button--${ dbTableItem }` )
        input.button__submit( 
          class= `button__submit--${ dbTableItem }`
          type = 'hidden' 
          name= name 
          value= value 
          dbTableItem= dbTableItem
        )
        section.button__content.content
          each val, index in data  
            section.content__item( 
              class= `content__item--${ dbTableItem }`
              value= index  
            )= val
  
  else if type === 'time-detail'
    aside.input__time-detail.time-detail
      span.time-detail__input.input
        input.input__year( type = 'number', value = year, placeholder = 'yyyy', min = '1999' name = dbTableYear)
        input.input__month( type = 'number', value = month, placeholder = 'mm', min = '01', max = '12' name = dbTableMonty)
        input.input__date( type = 'number', value = date, placeholder = 'dd', min = '01', max = '31' name = dbTableDate )
      