-
article.info__input#input
  if type === 'text'
    section.input__text
      if flag !== null 
        img.input__flag( src= flag alt= '>' )
      if content !== null
        input.input__content( 
          placeholder= placeholder
          type= dataType
          value= value
          name= name 
          required= required
          dbTableItem= dbTableItem
          languageId= languageId
          i18n= i18n
        )

  else if type === 'time'
    article.input__time.time
      aside.time__from.from
        label.from__text= from
        span.from__input.input
          input.input__year( 
            type = 'number', 
            value = valueFrom,
            dbTableItem= 'from' 
            placeholder = 'yyyy' 
            name= nameFrom
          )
      aside.time__to.to
        label.to__text= to
        span.to__input.input
          input.input__year( 
            type = 'number', 
            value = valueTo, 
            placeholder = 'yyyy' 
            name= nameTo
            dbTableItem= 'to'
          )

  else if type === 'local-topic'
    section.input__local-topic.local-topic  
      p.local-topic__text= localTopic

  else if type === 'dropdown'
    section.input__dropdown.dropdown
      section.dropdown__top= top
      article.dropdown__button.button
        input.button__submit( 
          type = 'hidden' 
          name= name 
          value= value 
          dbTableItem= dbTableItem
        )
        section.button__content.content
          each val, index in data  
            section.content__item( value= index  )= val

  else if type === 'remove'
    section.input__remove.remove
      input.delete__item( 
        type = 'hidden', 
        value= val, 
        name= name, 
        id= id, 
        dbTable= dbTable
      )
      