mixin student-card( data )
  -
    const degree = UTILS.faculty.degreeUtils.getValueById({
      id: data.degree,
      languageId: LANG.id
    })
  section.student-card
    p.student-card__content= `${data.name} ${degree}`

    img.student-card__patch(
      alt = 'patch',
      id = `student-card__patch--${ data.studentId }`,
      src = UTILS.staticUrl( { href: 'image/icon/settings.png' } ),
      data-id = data.studentId
    )
    img.student-card__delete(
      alt = 'delete',
      id = `student-card__delete--${ data.studentId }`,
      src = UTILS.staticUrl( { href: 'image/icon/cross.png' } )
      data-id = data.studentId
    )