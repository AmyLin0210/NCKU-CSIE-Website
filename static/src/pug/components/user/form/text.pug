mixin text ( config, i18n, method, table )
  section.content__text.text
    h4.text__input-title.input-title= i18n[ LANG.id ].title[ config.columnName ]
    input.text__text-input.text-input(
      type='text',
      input-type= 'text',
      languageId= LANG.id,
      placeholder= i18n[ LANG.id ].default[ config.columnName ],
      name= `${ config.columnName }`,
      column= config.columnName,
      table= table,
      method= method,
      required= config.required,
    )
