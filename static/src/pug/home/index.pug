extends /layouts/home.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title': 'Home',
        'topic': 'Latest news',
        'more':  'more',
        'hot':   'Hot news',
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title': '首頁',
        'topic': '最新消息',
        'more':  '更多資訊',
        'hot':   '最近熱門',
      },
    } );
    const currentRoute = '';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'home/index' )

append header
  +banner( i18n[ LANG.id ].title )

append content
  include /components/common/topic.pug

  +topic( i18n[ LANG.id ].topic )
  section.announcement
    nav#announcement__briefings.announcement__briefings.briefings
    a.announcement__button( href = UTILS.url( { href : 'announcement/all' } ) )= `${ i18n[ LANG.id ].more }...`
  section.announcement.announcement--hot-news
    header.announcement__title.title
      h1.title__text= i18n[ LANG.id ].hot
    nav#announcement__briefings--hot-news.announcement__briefings.briefings

append footer

append scripts
  +js( 'home/index' )
