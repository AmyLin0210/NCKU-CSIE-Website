extends /layouts/announcement/briefing.pug

append data
  -
    const i18n =  Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':    'Award',
        'topic':    'Award',
        'pinned':   'Pinned Announcement',
        'normal':   'Announcement',
        'breadcrumb': {
          'home':   'Home',
          'about':  'About',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':    '榮譽事蹟',
        'topic':    '榮譽',
        'pinned':   '置頂貼文',
        'normal':   '一般公告',
        'breadcrumb': {
          'home':   '首頁',
          'about':  '關於本系',
        },
      },
    } );
    const filterModifier = 'award';
    const currentRoute = 'about/award';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'about/award' )

append header
  +banner( i18n[ LANG.id ].title )
  +breadcrumb( [
    { text: i18n[ LANG.id ].breadcrumb.home, url: '' },
    { text: i18n[ LANG.id ].breadcrumb.about, url: 'about' },
    { text: i18n[ LANG.id ].title },
  ] )

append footer

append scripts
  +js( 'about/award' )
