extends /layouts/about.pug

append data
  -
    const i18n= Object.freeze( {
      [ language.getLanguageId( 'en-US' ) ]: {
        'title': 'Introduction',
      },
      [ language.getLanguageId( 'zh-TW' ) ]: {
        'title': '系所介紹',
      },
    } );
    const currentRoute = 'about/intro';

append title
  +title( i18n[ language.id ].title )

append stylesheets
  +css( 'about/intro' )

append header

append content
  include /components/common/not-available.pug
  +notAvailable()

append footer

append scripts
  +js( 'about/intro' )
