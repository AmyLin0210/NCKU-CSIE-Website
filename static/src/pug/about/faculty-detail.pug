        'about':      'About',
        'office':     'Office Address',
        'tel':        'Office Tel',
        'ext':        'ext.',
        'lab':        'Laboratory',
        'address':    'Address',
        'education':  'School Record',
        'experience': 'Record',
        'department': {
          '0': 'dept. CSIE',
          '1': 'inst. CSIE',
          '3': 'IMI',
          '4': 'IMIS',
        },
        'degree': {
