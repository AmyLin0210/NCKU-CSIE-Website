extends /layouts/base.pug
include /components/auth/input-block.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Log In',
        breadcrumb: {
          home:     'Home',
          auth:     'Auth',
        },
        content: {
          headline: 'login',
          account:  'account',
          password: 'password',
          forget:   'forget password?',
          login:    'login',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '使用者登入',
        breadcrumb: {
          home:     '首頁',
          auth:     '管理',
        },
        content: {
          headline: '登入',
          account:  '帳號',
          password: '密碼',
          forget:   '忘記密碼?',
          login:    '登入',
        },
      },
    } );
    const currentRoute = 'auth/login';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'auth/login' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.auth, route: 'auth' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  section.content__login.login
    form.login__form.form
      h1.form__headline= i18n[ LANG.id ].content.headline
      +input_block( 'text', 'account', i18n[LANG.id].content.account )
      +input_block( 'text', 'password', i18n[LANG.id].content.password )
      p.form__password--forget= i18n[LANG.id].content.forget
      button.form__button= i18n[LANG.id].content.login

append footer

append scripts
  +js( 'auth/login' )
