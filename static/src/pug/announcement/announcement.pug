extends /layouts/announcement/announcement.pug

append data
  -
    const i18n = Object.freeze( {
      [ language.getLanguageId( 'en-US' ) ]: {
        'title':    'Announcement Detail',
        'breadcrumb': {
          'home':   'Home',
          'normal': 'Announcement',
        },
      },
      [ language.getLanguageId( 'zh-TW' ) ]: {
        'title':    '公告內容',
        'breadcrumb': {
          'normal': '系所公告',
          'home':   '首頁',
        },
      },
    } );
    const currentRoute = 'announcement/announcement';

append title
  +title( i18n[ language.id ].title )

append stylesheets
  +css( 'announcement/announcement' )

append header
  +banner( i18n[ language.id ].title )
  +breadcrumb( [
    { text: i18n[ language.id ].breadcrumb.home, url: '' },
    { text: i18n[ language.id ].breadcrumb.normal, url: 'announcement' },
    { text: i18n[ language.id ].title },
  ] )

append content

append footer

append scripts
  +js( 'announcement/announcement' )
