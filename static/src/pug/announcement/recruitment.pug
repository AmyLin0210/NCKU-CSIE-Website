extends /layouts/announcement/briefing.pug

append data
  -
    const i18n = Object.freeze( {
      'en-US': {
        'title':  'Recruitments',
        'topic':  'Recruitments',
        'top':    'Top Announcement',
        'normal': 'Announcement',
      },
      'zh-TW': {
        'title':  '徵人資訊',
        'topic':  '徵人資訊',
        'top':    '置頂貼文',
        'normal': '一般公告',
      },
    } );

append title
  +title( i18n[ language ].title )

append stylesheets
  +css( 'announcement/recruitment' )

append header

append topic
  +topic( i18n[ language ].topic )

append filter
  +filter( {
    modifier: 'recruitment',
    tags: [ 'recruitment', ]
  } )

append footer

append scripts
  +js( 'announcement/recruitment' )
