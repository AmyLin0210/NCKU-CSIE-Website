extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/user/input.pug
include /components/user/button.pug
include /components/user/nation-dropdown.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Project',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          project: {
            name:     'Name',
            support: 'Support',
          },
        }
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '專案',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          project: {
            name:    '專案名稱',
            support: '補助單位',
          },
        }       
      },
    } );
    const currentRoute = 'user/project';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/project' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    +local-topic( 'main', '專案 / Project' )
    article.main__project.project
      +button( 'project', 'add' )
      +button( 'project', 'delete' )
      +input( 'project', '從 / From', 'duration-from' )
      aside.project__duration-line
      +input( 'project', '至 / To', 'duration-to' )
      +input( 'project', '投稿對象 / Category', 'category' )
      +input( 'project', i18n[ 0 ].content.project.name, 'name-zh' )
      +input( 'project', i18n[ 1 ].content.project.name, 'name-en' )
      +input( 'project', i18n[ 0 ].content.project.support, 'support-zh' )
      +input( 'project', i18n[ 1 ].content.project.support, 'support-en' )

append footer

append scripts
  +js( 'user/project' )
