extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Technology Transfer',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
        }
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '技術轉移',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
        },        
      },
    } );
    const currentRoute = 'user/technologyTransfer';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/technologyTransfer' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    article.main__technology-transfer-block.technology-transfer-block
      +local-topic( 'technology-transfer-block', i18n[ LANG.id ].title, true )
      section.technology-transfer-block__technology-transfer.technology-transfer#technology-transfer

append footer

append scripts
  +js( 'user/technologyTransfer' )
