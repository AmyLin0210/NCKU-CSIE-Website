extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/user/input-block.pug 
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'User Profile',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          profile: {
            topic:           '個人資料 / Profile',
            name_ch:         '姓名',
            name_en:         'name',
            title_ch:        '職稱',
            title_en:        'title',
            department:      '系所別（可複選）',
            research:        '研究群 (可複選)',
            office_ch:       '辦公室',
            office_en:       'office',
            lab_name_ch:     '實驗室名稱',
            lab_name_en:     'Lab Name',
            lab_location_ch: '實驗室位置',
            lab_location_en: 'Lab Location',
            phone:           '聯絡電話 / Office Tel',
            email:           'Email',
            fax:             '傳真 / Fax',
            web:             '個人網站 / Personal Web',
            specilty:        '專長領域 / Specilty',
          },
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '使用者資料管理',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          profile: {
            topic:           '個人資料 / Profile',
            name_ch:         '姓名',
            name_en:         'name',
            title_ch:        '職稱',
            title_en:        'title',
            department:      '系所別（可複選）',
            research:        '研究群 (可複選)',
            office_ch:       '辦公室',
            office_en:       'office',
            lab_name_ch:     '實驗室名稱',
            lab_name_en:     'Lab Name',
            lab_location_ch: '實驗室位置',
            lab_location_en: 'Lab Location',
            phone:           '聯絡電話 / Office Tel',
            email:           'Email',
            fax:             '傳真 / Fax',
            web:             '個人網站 / Personal Web',
            specilty:        '專長領域 / Specilty',
          },
        },
      },
    } );
    const currentRoute = 'user/profile';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/profile' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( content )
  main.content__information.information
    +topic( information, i18n[ LANG.id ].content.topic )
    article.information__profile.profile
      +local-topic( 'profile', i18n[ LANG.id ].content.profile.topic )
      section.profile__personal.personal
        section.personal__name
          +input-block( '姓名', i18n[LANG.id].content.profile.name_ch, 'name_ch' )
          +input-block( 'name', i18n[LANG.id].content.profile.name_en, 'name_en' )
        section.personal__title
          +input-block( '職稱', i18n[LANG.id].content.profile.title_ch, 'title_ch', true, '副教授' )
          +input-block( 'title', i18n[LANG.id].content.profile.title_ch, 'title_ch' )
      section.profile__image
      section.profile__chooice
      section.profile__lab
    section.information__education
    section.information__experience

append footer

append scripts
  +js( 'user/profile' )
