include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'User Profile',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          profile: {
            topic:           '個人資料 / Profile',
            name_ch:         '姓名',
            name_en:         'name',
            title_ch:        '職稱',
            title_en:        'title',
            department:      '系所別（可複選）',
            research:        '研究群 (可複選)',
            office_ch:       '辦公室',
            office_en:       'office',
            lab_name_ch:     '實驗室名稱',
            lab_name_en:     'Lab Name',
            lab_location_ch: '實驗室位置',
            lab_location_en: 'Lab Location',
            lab_tel:         '實驗室電話 / Lab Tel',
            lab_web:         '實驗室網站 / Lab Web',
            phone:           '聯絡電話 / Office Tel',
            email:           'Email',
            fax:             '傳真 / Fax',
            web:             '個人網站 / Personal Web',
            specilty:        '專長領域 / Specilty',
          },
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '使用者資料管理',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          profile: {
            topic:           '個人資料 / Profile',
            name_ch:         '姓名',
            name_en:         'name',
            title_ch:        '職稱',
            title_en:        'title',
            department:      '系所別（可複選）',
            research:        '研究群 (可複選)',
            office_ch:       '辦公室',
            office_en:       'office',
            lab_name_ch:     '實驗室名稱',
            lab_name_en:     'Lab Name',
            lab_location_ch: '實驗室位置',
            lab_location_en: 'Lab Location',
            lab_tel:         '實驗室電話 / Lab Tel',
            lab_web:         '實驗室網站 / Lab Web',
            phone:           '聯絡電話 / Office Tel',
            email:           'Email',
            fax:             '傳真 / Fax',
            web:             '個人網站 / Personal Web',
            specilty:        '專長領域 / Specilty',
          },
        },
      },
    } );
    const currentRoute = 'user/profile';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/profile' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( content )
  main.content__information.information
    +topic( information, i18n[ LANG.id ].content.topic )
    article.information__profile.profile
      +local-topic( 'profile', i18n[ LANG.id ].content.profile.topic )
      section.profile__personal.personal
        section.personal__name
          +input-block( 'name', i18n[LANG.id].content.profile.name_ch, 'name_ch' )
          +input-block( 'name', i18n[LANG.id].content.profile.name_en, 'name_en' )
        section.personal__title
          +button( 'title', 'add' )
          +input-block( 'title', i18n[ LANG.id ].content.profile.title_ch, 'title_ch', '副教授' )
          +input-block( 'title', i18n[ LANG.id ].content.profile.title_en, 'title_en' )
          +button( 'title', 'delete' )
      section.profile__choose.choose
        section.choose__department.department
          p.department__title= i18n[ LANG.id ].content.profile.department
          each departmentId in UTILS.faculty.departmentUtils.supportedId
            button.department__tag(
              data-department-id = `${ departmentId }`
            )= UTILS.faculty.departmentUtils.getValueById( { id: departmentId, languageId: LANG.id } )
        section.choose__research.research
          p.research__title= i18n[ LANG.id ].content.profile.research
          each researchGroupId in UTILS.faculty.researchGroupUtils.supportedId
            button.research-group__tag(
              data-research-group-id = `${ researchGroupId }`,
            )= UTILS.faculty.researchGroupUtils.getValueById( { id: researchGroupId, languageId: LANG.id } )
      section.profile__image
      section.profile__work
        section.work__office.office
          +input-block( 'office', i18n[ LANG.id ].content.profile.office_ch, 'office_ch', "Ex.資訊系新館大樓12F 65C11" )
          +input-block( 'office', i18n[ LANG.id ].content.profile.title_en, 'office_en' )
        section.work__lab-name.lab-name
          +input-block( 'lab-name', i18n[ LANG.id ].content.profile.lab_name_ch, 'lab-name_ch', "Ex.智慧型知識管理實驗室" )
          +input-block( 'lab-name', i18n[ LANG.id ].content.profile.lab_name_ch, 'lab-name_en' )
        section.work__lab-location.lab-location
          +input-block( 'lab-location', i18n[ LANG.id ].content.profile.lab_location_ch, 'lab-location_ch', "Ex.資訊系新館大樓9F 65903" )
          +input-block( 'lab-location', i18n[ LANG.id ].content.profile.lab_location_en, 'lab-location_en' )
        section.work__lab-tel.lab-tel
          +input-block( 'lab-tel', i18n[ LANG.id ].content.profile.lab_tel, 'lab-tel' )
        section.work__lab-web


    article.information__education
    article.information__experience

append footer

append scripts
  +js( 'user/profile' )
