append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__information.information
    +topic( 'information', i18n[ LANG.id ].content.topic )
    article.information__profile.profile
      +local-topic( 'profile', i18n[ LANG.id ].content.profile.topic )
      section.profile__personal.personal#profile__personal
        section.personal__name
          +input( 'name', i18n[ 0 ].content.profile.name, 'name-zh', true )
          +input( 'name', i18n[ 1 ].content.profile.name, 'name-en', true )
        section.personal__title#personal__title
          +button( 'title', 'add' )
          +input( 'title', i18n[ 0 ].content.profile.title, 'title-zh', true, '副教授' )
          +input( 'title', i18n[ 1 ].content.profile.title, 'title-en', true )
          +button( 'title', 'delete' )
      section.profile__filter.filter
        section.filter__department.department
          aside.department__title
            p.title__required= '*'
            p.title__content= i18n[ LANG.id ].content.profile.department
          each departmentId in UTILS.faculty.departmentUtils.supportedId
            button.department__tag(
              data-department-id = `${ departmentId }`
            )= UTILS.faculty.departmentUtils.getValueById( { id: departmentId, languageId: LANG.id } )
        section.filter__research-group.research-group
          aside.research-group__title
            p.title__required= '*'
            p.title__content= i18n[ LANG.id ].content.profile.research
          each researchGroupId in UTILS.faculty.researchGroupUtils.supportedId
            button.research-group__tag(
              data-research-group-id = `${ researchGroupId }`,
            )= UTILS.faculty.researchGroupUtils.getValueById( { id: researchGroupId, languageId: LANG.id } )
      section.profile__image
        section.image__frame
          button.frame__button= i18n[ LANG.id ].content.profile.image
        +nation-dropdown( 'image' )
      section.profile__work#profile__work
        section.work__office.office
          +image( {
            alt:       '>',
            className: `office__image`,
            src:       `icon/location.png`,
          } )
          +input( 'office', i18n[ 0 ].content.profile.office, 'office-zh', false, "Ex.資訊系新館大樓12F 65C11" )
          +input( 'office', i18n[ 1 ].content.profile.office, 'office-en' )
        section.work__lab-name.lab-name  
          +image( {
            alt:       '>',
            className: `lab-name__image`,
            src:       `icon/laboratory.png`,
          } )       
          +input( 'lab-name', i18n[ 0 ].content.profile.lab_name, 'lab-name-zh', false, "Ex.智慧型知識管理實驗室" )
          +input( 'lab-name', i18n[ 1 ].content.profile.lab_name, 'lab-name-en' )
        section.work__lab-location.lab-location
          +image( {
            alt:       '>',
            className: `lab-location__image`,
            src:       `icon/laboratory.png`,
          } )  
          +input( 'lab-location', i18n[ 0 ].content.profile.lab_location, 'lab-location-zh', false, "Ex.資訊系新館大樓9F 65903" )
          +input( 'lab-location', i18n[ 1 ].content.profile.lab_location, 'lab-location-en' )
        section.work__lab-tel.lab-tel
          +image( {
            alt:       '>',
            className: `lab-tel__image`,
            src:       `icon/laboratory.png`,
          } )  
          +input( 'lab-tel', i18n[ LANG.id ].content.profile.lab_tel, 'lab-tel', true )
        section.work__lab-web.lab-web
          +image( {
            alt:       '>',
            className: `lab-web__image`,
            src:       `icon/laboratory.png`,
          } )  
          +input( 'lab-web', i18n[ LANG.id ].content.profile.lab_web, 'lab-web' )
        section.work__office-tel.office-tel
          +image( {
            alt:       '>',
            className: `office-tel__image`,
            src:       `icon/phone.png`,
          } )  
          +input( 'office-tel', i18n[ LANG.id ].content.profile.office_tel, 'office-tel', true )
        section.work__email.email
          +image( {
            alt:       '>',
            className: `email__image`,
            src:       `icon/envelope.png`,
          } )  
          +input( 'email', i18n[ LANG.id ].content.profile.email, 'email' )
        section.work__fax.fax
          +image( {
            alt:       '>',
            className: `fax__image`,
            src:       `icon/printer.png`,
          } )  
          +input( 'fax', i18n[ LANG.id ].content.profile.fax, 'fax' )
        section.work__personal-web.personal-web
          +image( {
            alt:       '>',
            className: `personal-web__image`,
            src:       `icon/user.png`,
          } )  
          +input( 'personal-web', i18n[ LANG.id ].content.profile.personal_web, 'personal-web', false )
        section.work__specilty#work__specilty
          +button( 'specilty', 'add' )
          +input( 'specilty', i18n[ 0 ].content.profile.specilty, 'specilty-zh' )
          +input( 'specilty', i18n[ 1 ].content.profile.specilty, 'specilty-en' )
          +button( 'specilty', 'delete' )

    article.information__education.education#information__education
      +local-topic( 'education', i18n[ LANG.id ].content.education.topic )
      section.education__detail#education__detail
        +button( 'education', 'add' )
        +button( 'education', 'delete' )
        +input( 'education', i18n[ LANG.id ].content.education.duration_from, 'duration-from', false, 'Ex.1996' )
        section.detail__duration-line
        +input( 'education', i18n[ LANG.id ].content.education.duration_to, 'duration-to', false, 'Ex.2000' )
        section.detail__nation
          aside.nation__title
            p.title__content= i18n[ LANG.id ].content.education.nation 
          +nation-dropdown( 'education' )
        +input( 'education', i18n[ 0 ].content.education.school, 'school-zh', false, '國立台灣大學' )
        +input( 'education', i18n[ 1 ].content.education.school, 'school-en', false, 'The Ohio State University' )
        +input( 'education', i18n[ 0 ].content.education.major, 'major-zh', false, '電機工程' )
        +input( 'education', i18n[ 1 ].content.education.major, 'major-en', false, 'Computer and Informat' )
        section.detail__degree
          aside.degree__title
            p.title__content= i18n[ LANG.id ].content.education.degree
          +dropdown( 'education', i18n[ LANG.id ].content.education.degree_dropdown )
    article.information__experience#information__experience
      +local-topic( 'experience', i18n[ LANG.id ].content.experience.topic )  
      section.experience__detail#experience__detail 
        +button( 'experience', 'add' )
        +button( 'experience', 'delete' )
        +input( 'experience', i18n[ LANG.id ].content.education.duration_from, 'duration-from', false, '2000' )
        section.detail__duration-line
        +input( 'experience', i18n[ LANG.id ].content.education.duration_to, 'duration-to', false, '2004' )
        +input( 'experience', i18n[ 0 ].content.experience.organization, 'organization-zh' )
        +input( 'experience', i18n[ 1 ].content.experience.organization, 'organization-en' )
        +input( 'experience', i18n[ 0 ].content.experience.department, 'department-zh' )
        +input( 'experience', i18n[ 1 ].content.experience.department, 'department-en' ) 
        +input( 'experience', i18n[ 0 ].content.experience.title, 'title-zh' ) 
        +input( 'experience', i18n[ 1 ].content.experience.title, 'title-en' ) 

append footer

append scripts
  +js( 'user/profile' )
