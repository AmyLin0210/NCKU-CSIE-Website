extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Conference',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          conference: {
            host_year:  '舉行時間 / Host Year',
            conference: 'Conference',
            title:      'title',
          },
        }
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '參與會議',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          conference: {
            host_year:  '舉行時間 / Host Year',
            conference: '會議名稱',
            title:      '職稱',
          },
        },        
      },
    } );
    const currentRoute = 'user/conference';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/conference' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    article.main__conference-block.conference-block
      +local-topic( 'conference-block', '參與會議 / Conference', true )
      section.conference-block__conference.conference#conference

append footer

append scripts
  +js( 'user/conference' )
