extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/user/input.pug
include /components/user/button.pug
include /components/user/nation-dropdown.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Conference',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          award: {
            received_date: '獲獎日 / Received Date',
            award_name:    'Award Name',
          },
        }
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '參與會議',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          award: {
            received_date: '獲獎日 / Received Date',
            award_name:    '獲獎名稱',
          },
        },        
      },
    } );
    const currentRoute = 'user/conference';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/conference' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    article.main__award.award
      +button( 'award', 'add' )
      +button( 'award', 'delete' )
      +input( 'award', i18n[ LANG.id ].content.award.received_date, 'received-date' )
      +input( 'award', i18n[ 0 ].content.award.award_name, 'award-zh' )
      +input( 'award', i18n[ 1 ].content.award.award_name, 'award-en' )

append footer

append scripts
  +js( 'user/conference' )
