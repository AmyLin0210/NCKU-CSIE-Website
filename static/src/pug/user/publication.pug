extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/user/input.pug
include /components/user/button.pug
include /components/user/dropdown.pug
include /components/user/check.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Publication',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          publication: {
            authors: 'Authors',
            title:   'Title',
            category: {
              journal: 'Journal',
              conference: 'Conference',
              workshop:   'Workshop',
            },
          },
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '著作',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          publication: {
            authors: '作者',
            title:   '著作名稱',
            category: {
              journal: '期刊',
              conference: '會議',
              workshop:   '工作坊',
            },
          },
        }       
      },
    } );
    const currentRoute = 'user/publication';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/publication' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    +local-topic( 'main', '著作 / Publication' )
    article.main__publication.publication
      +button( 'publication', 'add' )
      +button( 'publication', 'delete' )
      +input( 'publication', '發行年月/ Issue Year/Month', 'issue-time' )
      +input( 'publication', i18n[ 0 ].content.publication.authors, 'authors-zh' )
      +input( 'publication', i18n[ 1 ].content.publication.authors, 'authors-en' )
      +input( 'publication', i18n[ 0 ].content.publication.title, 'title-zh' )
      +input( 'publication', i18n[ 1 ].content.publication.title, 'title-en' )
      +dropdown( 'publication', i18n[ LANG.id ].content.publication.category )
      +check( 'project', 'international', '國際級別 / International' )
      +check( 'project', 'refereed', '經過審查委員省和 / Refereed' )

append footer

append scripts
  +js( 'user/publication' )
