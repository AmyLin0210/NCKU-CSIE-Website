extends /layouts/base.pug
include /components/user/navigation-bar.pug
include /components/user/local-topic.pug
include /components/common/topic.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Publication',
        breadcrumb: {
          home:     'Home',
          user:     'User',
        },
        content: {
          topic: '教師資料維護',
          publication: {
            authors: 'Authors',
            title:   'Title',
            category: {
              journal: 'Journal',
              conference: 'Conference',
              workshop:   'Workshop',
            },
          },
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '著作',
        breadcrumb: {
          home:     '首頁',
          user:     '使用者',
        },
        content: {
          topic: '教師資料維護',
          publication: {
            authors: '作者',
            title:   '著作名稱',
            category: {
              journal: '期刊',
              conference: '會議',
              workshop:   '工作坊',
            },
          },
        }       
      },
    } );
    const currentRoute = 'user/publication';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'user/publication' )

append header

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.user, route: 'user' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  +navigation-bar( 'content' )
  main.content__main
    +topic( 'main', i18n[ LANG.id ].content.topic )
    article.main__publication-block.publication-block
      +local-topic( 'publication-block',i18n[ LANG.id ].title, true )
      section.publication-block__publication.publication#publication

append footer

append scripts
  +js( 'user/publication' )
