extends /layouts/base.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':    'Research',
        'breadcrumb': {
          'home':   'Home',
        },
        'entries': [
          {
            title: 'Laboratories',
            detail: 'List of all laboratories of department',
            modifier: 'red',
            route: 'research/lab',
          },
          {
            title: 'Publications',
            detail: 'List of all publications of department',
            modifier: 'green',
            route: 'research/publication',
          },
        ],
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':    '學術研究',
        'breadcrumb': {
          'home':   '首頁',
        },
        'entries': [
          {
            title: '實驗室',
            detail: '資訊所研究實驗室列表',
            modifier: 'red',
            route: 'research/lab',
          },
          {
            title: '發表論文',
            detail: '已發表的論文總覽',
            modifier: 'green',
            route: 'research/publication',
          },
        ],
      },
    } );
    const currentRoute = 'research';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'research/index' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )
  +breadcrumb(
    'body',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  include /components/common/entries.pug
  +entries( 'content', i18n[ LANG.id ].entries )

append footer

append scripts
  +js( 'research/index' )
