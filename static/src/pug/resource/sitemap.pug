    const currentRoute = 'resource/sitemap';
    const allLinks = {
      home: '',
      intro: 'about/intro',
      faculty: 'about/faculty',
      staff: 'about/staff',
      award: 'about/award',
      contact: 'about/contact',
      lab: 'about/lab',
