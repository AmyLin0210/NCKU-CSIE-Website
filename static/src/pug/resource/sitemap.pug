    };

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'resource/sitemap' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.resource, route: 'resource' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  figure.content__logo.logo
    +image( {
      alt:       'csie',
      className: 'logo__image',
      src:       'logo/csie.png',
    } )
    figcaption.logo__caption.caption
      h1.caption__text.caption__text--large 成功大學資訊工程學系暨研究所
      h2.caption__text.caption__text--small Department of Computer Science and Information Engineering
  section.content__sitemap.sitemap
    each val, index in i18n[ LANG.id ].titles
      article.sitemap__title( class = `sitemap__title--${ index }` )= val
    hr.sitemap__hr
    each val, index in allLinks
      a.sitemap__link( class = `sitemap__link--${ index }`, href = UTILS.url( { href : `${ val }` } ) )= i18n[ LANG.id ].links[ index ]

append footer

append scripts
  +js( 'resource/sitemap' )
