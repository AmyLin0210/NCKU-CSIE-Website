extends /layouts/base.pug

append data
  -
    const i18n = Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        title:      'Links',
        breadcrumb: {
          home:     'Home',
          resource: 'Resource',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        title:      '相關連結',
        breadcrumb: {
          home:     '首頁',
          resource: '資源連結',
        },
      },
    } );
    const currentRoute = 'resource/link';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'resource/link' )

append header
  +banner(
    'body',
    i18n[ LANG.id ].title
  )

append breadcrumb
  +breadcrumb(
    'content',
    [
      { text: i18n[ LANG.id ].breadcrumb.home, route: '' },
      { text: i18n[ LANG.id ].breadcrumb.resource, route: 'resource' },
      { text: i18n[ LANG.id ].title },
    ]
  )

append content
  include /components/common/not-available.pug
  +notAvailable( 'content' )

append footer

append scripts
  +js( 'resource/link' )
