extends /layouts/announcement/briefing.pug

append data
  -
    const i18n =  Object.freeze( {
      [ LANG.getLanguageId( 'en-US' ) ]: {
        'title':      'Rule',
        'topic':      'Rule',
        'pinned':     'Pinned Announcement',
        'normal':     'Announcement',
        'breadcrumb': {
          'home':     'Home',
          'resource': 'Resource',
        },
      },
      [ LANG.getLanguageId( 'zh-TW' ) ]: {
        'title':      '法規彙編',
        'topic':      '法規彙編',
        'pinned':     '置頂貼文',
        'normal':     '一般公告',
        'breadcrumb': {
          'home':     '首頁',
          'resource': '資源連結',
        },
      },
    } );
    const filterModifier = 'rule';
    const filterTags = [
      'college',
      'faculty',
      'master',
      'phd',
      'rule',
    ];
    const currentRoute = 'resource/rule';

append title
  +title( i18n[ LANG.id ].title )

append stylesheets
  +css( 'resource/rule' )

append header
  +banner( i18n[ LANG.id ].title )
  +breadcrumb( [
    { text: i18n[ LANG.id ].breadcrumb.home, url: '' },
    { text: i18n[ LANG.id ].breadcrumb.resource, url: 'resource' },
    { text: i18n[ LANG.id ].title },
  ] )

append footer

append scripts
  +js( 'resource/rule' )
